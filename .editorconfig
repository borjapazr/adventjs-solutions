root = true

[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,gradle,xml}]
indent_size = 4
continuation_indent_size = 8

[*.py]
indent_size = 4
max_line_length = 120

[{go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4

[*.php]
indent_size = 4

[*.js]
block_comment_start = /**
block_comment = *
block_comment_end = */

[*.min.js]
indent_style = ignore
insert_final_newline = ignore

[{Makefile,*.mk}]
indent_style = tab

[*.{cmd,bat}]
indent_style = tab
end_of_line = crlf

[*.{json,json5}]
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false
